# ──────────────────────────────────────────
# QuoteViral Newsletter — .env
# Copy this file to .env and fill in values
# ──────────────────────────────────────────

# ── Core ──
DOMAIN=quoteviral.online
MAIL_HOSTNAME=mail.quoteviral.online
TZ=Asia/Kolkata

# ── PostgreSQL ──
POSTGRES_DB=listmonk
POSTGRES_USER=listmonk
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# ── Listmonk ──
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASS
LISTMONK_FROM_EMAIL=news@quoteviral.online
LISTMONK_PUBLIC_URL=http://localhost:9000

# ── n8n ──
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=CHANGE_ME_RANDOM_32_CHARS
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_N8N_PASS
N8N_API_KEY=CHANGE_ME_N8N_API_KEY

# ── Hetzner Cloud ──
HETZNER_API_TOKEN=CHANGE_ME
HETZNER_SERVER_TYPE=cx33
HETZNER_LOCATION=hel1
HETZNER_IMAGE=ubuntu-24.04
HETZNER_SSH_KEY_IDS=CHANGE_ME
HETZNER_FIREWALL_ID=CHANGE_ME
HETZNER_NETWORK_ID=

# ── Cloudflare ──
CLOUDFLARE_ACCOUNT_ID=CHANGE_ME
CLOUDFLARE_API_TOKEN=CHANGE_ME
CLOUDFLARE_ZONE_ID=CHANGE_ME
CLOUDFLARE_D1_DATABASE_ID=CHANGE_ME
CLOUDFLARE_SPF_RECORD_ID=CHANGE_ME

# ── Cloudflare R2 ──
R2_ACCESS_KEY_ID=CHANGE_ME
R2_SECRET_ACCESS_KEY=CHANGE_ME
CLOUDFLARE_R2_ENDPOINT=https://CHANGE_ME.r2.cloudflarestorage.com
CLOUDFLARE_R2_BUCKET=namma-backups
R2_PUBLIC_BASE_URL=https://cdn.quoteviral.online

# ── Telegram Alerts ──
TELEGRAM_BOT_TOKEN=CHANGE_ME
TELEGRAM_CHAT_ID=CHANGE_ME

# ── Scrapling / NVIDIA AI ──
SCRAPLING_CONCURRENCY=5
SCRAPLING_TIMEOUT_SECONDS=25
SCRAPLING_IMAGE_MAX_WIDTH=800
NVIDIA_API_KEYS=CHANGE_ME
NVIDIA_MODEL=meta/llama-3.1-70b-instruct

# ── IP Management ──
ACTIVE_IPS=
PRIMARY_IP_IDS=
PRIMARY_IP_NAME_PREFIX=namma-ip-
DISTRICT_IP_MAP={}

# ── Git / Self-Delete ──
GIT_REPO_URL=https://github.com/ajithvnr2001/newsletter.git
GIT_BRANCH=main
SPAWN_WORKER_TOKEN=CHANGE_ME_RANDOM_TOKEN
SELF_DELETE_WORKER_URL=https://delete-check.quoteviral.online
SELF_DELETE_WORKER_TOKEN=CHANGE_ME_RANDOM_TOKEN
DELETE_WORKER_TOKEN=CHANGE_ME_RANDOM_TOKEN
SERVER_NAME_PREFIX=namma-ephemeral-
